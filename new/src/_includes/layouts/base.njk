						{% if loop.index <= 3 %}
						<div class="relative">
							{% include "review-block.njk" %}
						</div>
						{% endif %}
					{% endfor %}
					{% set ctaText = "Read more customer Reviews" %}
					{% set ctaLink = "reviews" %}
					{% include "reviews-cta.njk" %}
				{% endif %}
			</div>
		</div>
	{% endif %}


	{% if faqs %}
		<!-- FAQs -->
		<div id="read" class="container mx-auto w-3/5 {% if heroImage != false %}!pt-3{% endif %}">
			<h3 class="text-6xl font-bold text-center py-4 px-6 bg-cover bg-center rounded-lg">
			Frequently Asked Questions
			</h3>
			<h4 class="text-5xl font-rancho -mt-2 mb-14 text-center px-6 bg-cover bg-center rounded-lg -rotate-3">
				And Answers.
			</h4>
			{% if faqs and faq.length > 0 %}
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 gap-10 text-3xl mx-auto">
					{% for item in faq %}
						<div class="relative">
							<div class="absolute inset-0 bg-white rounded-lg shadow-md -rotate-0"></div>
							<div class="relative px-12 py-8">
								<div class="relative z-[2]">
									<p class="mb-1 text-5xl">{{ item.question }}</p>
									<p class="font-xxlight tracking-ss font-atki text-4xl">
										<span class="font-medium">{{ item.answer1 }}</span>
										{{ item.answer2 }}
										{% if item.moreInfoLink and item.moreInfoText %}
											<a href="{{ item.moreInfoLink }}"
											   {% if item.target %}target="{{ item.target }}" rel="noopener noreferrer"{% endif %}>
												{{ item.moreInfoText }}
											</a>
										{% endif %}
									</p>
								</div>
							</div>
						</div>
					{% endfor %}

					<!-- Read More FAQs Block -->
					{# <div class="relative bg-gray-50 rounded-lg shadow-md">
						<div class="absolute inset-0 bg-white rounded-lg shadow-md -rotate-1"></div>
						<div class="relative flex items-center h-full px-12 py-8">
							<a href="/contact/" class="text-5xl text-center hover:underline">
								Have more Questions? Contact Us
								<span class="inline-block">
								{% set svgSize = "size-12" %}
								{% set svgColor = "text-gray-300" %}
								{% include "r-arrow.svg" %}
								</span>
							</a>
						</div>
					</div> #}
				</div>
			{% else %}

			{% endif %}
		</div>
	{% endif %}

	<!-- TEXT BLOCK III -->
	{% if contactForm %}
		<div id="contactForm" class="container !pt-0 mx-auto section">
			{# <h3 class="text-6xl font-bold text-center py-4 px-6 bg-cover bg-center rounded-lg">
				Contact Form
			</h3>
			<h4 class="text-5xl font-rancho -mt-2 mb-10 text-center px-6 bg-cover bg-center rounded-lg -rotate-3">
				Get in Touch
			</h4> #}
			<form name="Contact Form" data-netlify="true" action="/thank-you/#read" method="POST" netlify-honeypot="bot-field" class="max-w-2xl mx-auto">
				<input type="hidden" name="form-name" value="Contact Form" />
				<div class="mb-6">
					<label for="name" class="block text-3xl font-medium text-gray-700 mb-2">Name</label>
					<input type="text" id="name" name="name" required class="w-full px-4 py-3 text-3xl border border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500">
				</div>
				<div class="mb-6">
					<label for="email" class="block text-3xl font-medium text-gray-700 mb-2">Email</label>
					<input type="email" id="email" name="email" required class="w-full px-4 py-3 text-3xl border border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500">
				</div>
				<div class="mb-6">
					<label for="message" class="block text-3xl font-medium text-gray-700 mb-2">Message</label>
					<textarea id="message" name="message" rows="4" required class="w-full px-4 py-3 text-3xl border border-gray-300 rounded-lg focus:ring-amber-500 focus:border-amber-500"></textarea>
				</div>
				<div class="text-center">
					<button type="submit" class="{{ buttonClass }}">
						Send Message
					</button>
				</div>
			</form>
		</div>
	{% endif %}

	<!-- BOOKINGS BUTTON-->
	{% if bookButton %}
		<div id="" class="container mx-auto section !pt-0">
			<div class="text-center">
				<a href="https://bookings.obeeapp.com/auctionroomscafe" target="_blank" class="{{ buttonClass }}">
					Book a Table at Auction Rooms
				</a>
			</div>
		</div>
	{% endif %}

	<!-- BOOKINGS BUTTON-->
	{% if giftCard %}
		<div id="" class="container mx-auto section !pt-0">
			<div class="text-center">
				<a href="https://squareup.com/gift/MLMW57TDAS06T/order" target="_blank" class="{{ buttonClass }}">
					Buy a Gift Card
				</a>
			</div>
		</div>
	{% endif %}

	<!-- CTA -->
	{% if cta %}
		<div id="" class="container mx-auto section {% if page.url != '/' and heroImage != false %}mt-0{% endif %}">
			<!-- Did You Know Block -->
			<div id="DidYouKnow" class="relative bg-gray-50 rounded-lg shadow-md group">
				<div class="absolute inset-0 bg-gray-50 rounded-lg shadow-md -rotate-1 transition-transform duration-300 group-hover:rotate-0"></div>
				<div class="relative flex items-center justify-center h-full px-6 py-12">
					<a href="
						{% if ctaText %}
							{{ ctaLink }}
						{% else %}
							/private-dining
						{% endif %}
						" class="flex items-start text-4xl sm:text-5xl leading-16 text-left sm:text-center no-underline group font-rancho">
						<span class="mr-4 mt-0 translate-y-0 sm:-translate-y-4">
							{% set svgSize = "size-12" %}
							{% set svgColor = "text-gray-300" %}
							{% include "question.svg" %}
						</span>
						<span class="flex-1">
							{% if ctaText %}
								{{ ctaText }}
							{% else %}
								Did you know Auction Rooms offers private dining and private meeting space?
							{% endif %}
						</span>
						<span class="inline-block transition-colors duration-300 text-gray-300 group-hover:text-amber-300 ml-2 self-center transform translate-y-0 sm:translate-y-0">
							{% set svgSize = "size-12" %}
							{% set svgColor = "text-gray-300" %}
							{% include "r-arrow.svg" %}
						</span>
					</a>
				</div>
			</div>
		</div>
	{% endif %}

	<!-- Instagram -->
	<div id="insta" class="container !pt-30 !pb-12 mx-auto section">
		<h3 class="text-6xl font-bold text-center py-4 px-6 bg-cover bg-center rounded-lg">
			{# <svg class="inline-block mr-3 text-amber-300" width="48" height="48" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
				<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.059 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
			</svg> #}
			<a class="" target="_blank" href="https://www.instagram.com/auction_rooms/">See Our Instagram</a>
		</h3>
		<h4 class="text-5xl font-rancho -mt-2 mb-10 text-center px-6 bg-cover bg-center rounded-lg -rotate-3">
			<a target="_blank" href="https://www.instagram.com/auction_rooms/" class="no-underline">@Auction_Rooms</a>
		</h4>

		{% set instaPics = true %}
		{% set ptOr = "!pt-0" %}
		{% if instaPics %}
			{{ imageRow(imagerow.row1, "/img/", instaPics, ptOr) }}
		{% endif %}
	</div>


	<!-- Footer -->
	<div id="footer" class="container mx-auto pt-0 pb-6">
		<div class="grid grid-cols-1 text-3xl mx-auto">
			<div class="relative">
				<div class="absolute inset-0 bg-gray-100 rounded-lg shadow-md"></div>
				<div class="relative px-6 py-12">
					<div class="relative z-[2]">
						<p class="font-semibold pl-16 font-sans text-4xl">
							{% for menu in menu %}
							{% if loop.first %}
							<span class="inline-block align-baseline mr-1">
								<a href="/">
								<img src="/img/ar-logo-blk-sm.png" alt="Auction Rooms Logo" class="h-12" />
								</a>
							</span>
							<span class="px-4 inline-block align-bottom">&middot;</span>
							{% endif %}
							<a href="{{ menu.url }}{% if not menu.target %}{% endif %}"
							class="inline-block align-bottom text-4xl font-semibold text-black hover:text-amber-300 transition-colors duration-300 no-underline hover:underline"
							{% if menu.target %}
								target="_blank"
							{% endif %}>
							{{ menu.text }}
							</a>
							{% if not loop.last %}
							<span class="px-3 inline-block align-bottom">&middot;</span>
							{% endif %}
