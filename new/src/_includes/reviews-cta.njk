<!-- Read More Press Reviews Block -->
	<div id="moreReviews" class="relative bg-gray-50 rounded-lg shadow-md group">
		<div class="absolute inset-0 bg-white rounded-lg shadow-md -rotate-1 group-hover:rotate-0 transition"></div>
		<div class="relative flex items-center h-full px-6 py-12">
			<div class="absolute top-2 left-4 z-[1]">
				{% set svgSize = "size-20" %}
				{% set svgColor = "text-gray-200" %}
				{% include "quote.svg" %}
			</div>
			<a href="/{{ ctaLink }}/#read" class="pl-16 text-5xl leading-[6rem] text-center underline group">
				{{ ctaText }}
				<span class="inline-block transition-colors duration-300 text-gray-300 group-hover:text-amber-300">
					{% set svgSize = "size-12" %}
					{% set svgColor = "text-gray-300" %}  <!-- Default color -->
					{% include "r-arrow.svg" %}
				</span>
			</a>
		</div>
	</div>